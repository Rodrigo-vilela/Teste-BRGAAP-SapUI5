<mvc:View
    controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Table
        id="invoiceList"
        class="sapUiResponsiveMargin"
        width="auto"
		alternateRowColors="true"
		growing="true"
		growingThreshold="200"
        items="{
            path : 'invoice>/',
            sorter : {
                path : 'userId',
				group : true
            }
        }" >
        <headerToolbar>
            <Toolbar>
                <Title textAlign="Center" width="20%" text="{i18n>invoiceListTitle}"/>
                <SearchField width="80%" search=".onFilterInvoices"/>
            </Toolbar>
        </headerToolbar>
        <columns>
			<Column
				hAlign="Center"
				minScreenWidth="Small"
				demandPopin="true"
				width="20%">				
				<Text text="{i18n>columnId}"/>
			</Column>
			<Column
				hAlign="Center"
				minScreenWidth="Small"
				demandPopin="true"
				width="40%">
				<Text text="{i18n>columnTitle}"/>
			</Column>
			<Column
				hAlign="Center"
				minScreenWidth="Small"
				demandPopin="true"
				width="20%">
				<Text text="{i18n>columnCompleted}"/>
			</Column>
			<Column
				hAlign="Center"
				minScreenWidth="Small"
				demandPopin="true"
				width="20%">			
				<Text text="{i18n>Detalhes}"/>
			</Column>
		</columns>
        <items>
            <ColumnListItem
				type="Navigation"
				press=".onPress">
				<cells>				
					<ObjectNumber number="{invoice>id}" emphasized="false"/>
					<ObjectIdentifier title="{invoice>title}"/>
					<CheckBox
						displayOnly="true"
						selected="{invoice>completed}"/>
					<Button
						icon ="sap-icon://detail-view"
						press=".onPress"
						width="100%"
						height = "100%"	/>

				</cells>
			</ColumnListItem>
        </items>
    </Table>
</mvc:View>